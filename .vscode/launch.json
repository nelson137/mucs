{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++",
            "type": "cppdbg",
            "request": "launch",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "make",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/a.out",
            "args": ["submit", "1050", "lab", "t.c"],
            "externalConsole": false,
            "windows": {
                "program":"${workspaceRoot}\\a.out",
                "miDebuggerPath": "C:\\cygwin64\\bin\\gdb.exe"
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "C++ Test",
            "type": "cppdbg",
            "request": "launch",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "make test",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/runtests",
            "args": [],
            "externalConsole": false,
            "windows": {
                "program":"${workspaceRoot}\\runtests.exe",
                "miDebuggerPath": "C:\\cygwin64\\bin\\gdb.exe"
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
