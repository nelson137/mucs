{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "mucs-schema.json",
    "type": "object",
    "required": [
        "course_id",
        "admin_hash",
        "homeworks",
        "lab-sessions",
        "lab-assignments"
    ],

    "properties": {
        "course_id": {
            "type": "string",
            "format": "course number",
            "description": "",
            "examples": ["1050", "2050"]
        },

        "admin_hash": {
            "type": "string",
            "format": "sha256 hex digest",
            "description": "",
            "examples": [
                "5e884898da28047151d0e56f8dc6292773603d0d6aabbdd62a11ef721d1542d8",
                "5994471abb01112afcc18159f6cc74b4f511b99806da59b3caf5a9c173cacfc5"
            ]
        },

        "homeworks": {
            "type": "array",
            "description": "",
            "items": {
                "type": "object",
                "description": "",
                "required": ["name", "duedate"],
                "properties": {
                    "name": {
                        "type": "string",
                        "format": "name",
                        "description": "",
                        "examples": ["hw1", "hw2"]
                    },
                    "duedate": {
                        "type": "string",
                        "pattern": "^[0-9]{4}(-[0-9]{2}){2} [0-9]{2}(:[0-9]{2}){2}$",
                        "format": "yyyy-mm-dd hh:mm:ss",
                        "description": "",
                        "examples": ["2020-03-29 21:00:00"]
                    }
                }
            }
        },

        "lab-sessions": {
            "type": "array",
            "description": "",
            "items": {
                "type": "object",
                "description": "",
                "required": ["id", "day", "start", "end"],
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "name",
                        "description": "",
                        "examples": ["A", "HONORS"]
                    },
                    "day": {
                        "type": "string",
                        "pattern": "^(Mon|Tue|Wed|Thu|Fri|Sat|Sun|Monday|Tuesday|Wednesday|Thursday|Friday|Saturday|Sunday)$",
                        "format": "weekday",
                        "description": "",
                        "examples": ["Mon", "Tuesday"]
                    },
                    "start": {
                        "type": "string",
                        "pattern": "^[0-9]{2}(:[0-9]{2}){2}$",
                        "format": "hh:mm:ss",
                        "description": "",
                        "examples": ["10:00:00"]
                    },
                    "end": {
                        "type": "string",
                        "pattern": "^[0-9]{2}(:[0-9]{2}){2}$",
                        "format": "hh:mm:ss",
                        "description": "",
                        "examples": ["12:30:00"]
                    }
                }
            }
        },

        "lab-assignments": {
            "type": "array",
            "description": "",
            "items": {
                "type": "object",
                "description": "",
                "required": ["name", "week"],
                "properties": {
                    "name": {
                        "type": "string",
                        "format": "name",
                        "description": "",
                        "examples": ["lab1", "lab2"]
                    },
                    "week": {
                        "type": "string",
                        "pattern": "^(Jan|Feb|Mar|Apr|May|Jun|Jul|Aug|Sep|Oct|Nov|Dec) [0-9]$",
                        "format": "month week-index",
                        "description": "",
                        "examples": ["Aug 1"]
                    }
                }
            }
        }
    }
}
